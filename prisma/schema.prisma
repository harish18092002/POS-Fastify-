generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POS_DATABASE_URL")
}

model OrderDetais {
  createdAt   DateTime    @default(now()) @map("created_at")
  orderId     String      @id @map("order_id")
  status      orderStatus
  orderedItem Item        @relation(fields: [orderId], references: [itemId])
}

enum orderStatus {
  ACCEPTED
  CANCELLED
}

model Item {
  orderId     String
  name        String
  itemId      String        @id @map("item_Id")
  description String
  quantity    String
  tax         Tax           @relation(fields: [itemId], references: [itemId])
  amount      String
  OrderDetais OrderDetais[]
}

model Tax {
  tax    String
  itemId String @id
  Item   Item[]
}
