generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POS_DATABASE_URL")
}

model OrderDetails {
  createdAt DateTime    @default(now()) @map("created_at")
  orderId   String      @id @map("order_id")
  status    orderStatus
  item      Item[]
}

enum orderStatus {
  ACCEPTED
  CANCELLED
}

model Item {
  orderId      String
  itemId       String       @id @map("item_Id")
  name         String
  description  String
  quantity     String
  amount       String
  orderDetails OrderDetails @relation(fields: [orderId], references: [orderId])
  tax          Tax[]
}

model Tax {
  taxId     String  @id
  taxType   taxType @map("tax_type")
  itemId    String
  taxAmount String  @map("tax_amount")
  item      Item    @relation(fields: [itemId], references: [itemId])
}

enum taxType {
  GST
  VAT
}
