generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POS_DATABASE_URL")
}

model OrderDetails {
  totalAmount String      @map("total_amount")
  createdAt   DateTime    @default(now()) @map("created_at")
  orderId     String      @id @map("order_id")
  status      orderStatus
  item        Item[]
}

enum orderStatus {
  ACCEPTED
  CANCELLED
}

model Item {
  orderId      String       @map("order_id")
  itemId       String       @id @map("item_id")
  name         String
  description  String
  quantity     String
  amount       String
  orderDetails OrderDetails @relation(fields: [orderId], references: [orderId])
  tax          Tax[]
}

model Tax {
  orderId   String
  taxId     String  @id @map("tax_id")
  taxType   taxType @map("tax_type")
  itemId    String  @map("item_id")
  taxAmount String  @map("tax_amount")
  item      Item    @relation(fields: [itemId], references: [itemId])
}

enum taxType {
  GST
  VAT
}

model paymentsHistory {
  orderId       String        @map("order_id")
  amount        String
  paymentStatus paymentStatus @map("payment_status")
  paymentId     String        @id @map("payment_id")
  createdAt     DateTime      @default(now()) @map("created_at")
}

model paymentsTransaction {
  transactionId String        @id @map("transaction_id")
  orderId       String        @map("order_id")
  amount        String
  paymentType   paymentType   @map("payment_type")
  paymentStatus paymentStatus @map("payment_status")
  paymentId     String        @map("payment_id")
  createdAt     DateTime      @default(now()) @map("created_at")
}

enum paymentType {
  FULL
  PARTIAL
}

enum paymentStatus {
  PENDING
  COMPLETED
  CANCELLED
  REFUNDED
  PARTIAL
}
